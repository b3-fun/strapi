{
  "kind": "collectionType",
  "collectionName": "news_articles",
  "info": {
    "singularName": "news-article",
    "pluralName": "news-articles",
    "displayName": "News"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "publishedDate": {
      "type": "datetime",
      "required": true
    },
    "lastModified": {
      "required": false,
      "type": "datetime"
    },
    "title": {
      "type": "string",
      "required": true
    },
    "blurb": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext"
    },
    "banner": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    }
  }
}
