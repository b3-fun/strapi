      "required": true
    },
    "enabled": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "taskId": {
      "type": "uid",
      "required": true
    },
    "banner": {
      "type": "media",
