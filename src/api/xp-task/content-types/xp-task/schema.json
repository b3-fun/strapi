    "limitPerUser": {
      "type": "integer",
      "required": true,
      "min": 1,
      "default": 1
    },
    "numXP": {
      "type": "integer",
      "required": true
    },
    "taskGroup": {
      "type": "string",
      "required": true
    },
    "linkText": {
      "type": "string"
    },
    "linkUrl": {
      "type": "string"
    },
    "taskTarget": {
      "type": "float",
      "required": true,
      "default": 1
